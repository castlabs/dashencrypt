<?xml version="1.0"?>
<MPD
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="urn:mpeg:dash:schema:mpd:2011"
        type="static"
        mediaPresentationDuration="PT0H1M19S"
        minBufferTime="PT9S"
        profiles="urn:mpeg:dash:profile:isoff-live:2011,urn:com:dashif:dash264">

    <!--
        Test Case:      D) Playback of Audio/Video content with multiple bitrates adaptation sets
        Audio Codec:    DTS-HD High Resolution ('dtsh')
    -->

    <BaseURL>http://dash.edgesuite.net/dash264/TestCasesMCA/DTS/segments/</BaseURL>

    <Period start="PT0S" duration="">

        <!-- Video -->
        <AdaptationSet
                mimeType="video/mp4"
                codecs="avc1.42c01e"
                segmentAlignment="true"
                startWithSAP="1"
                width="854"
                height="480"
                frameRate="24000/1001"
                par="16:9" >
            <SegmentTemplate
                    duration=""
                    timescale="48000"
                    media="$RepresentationID$.$Number%03d$"
                    initialization="$RepresentationID$.000">
                <SegmentTimeline>
                    <S t="0" d="144144" r="26"/>
                </SegmentTimeline>
            </SegmentTemplate>
            <Representation id="Paint_t01_V_480p23_baseL3_2000Kbps.mp4" bandwidth="2000000" sar="1:1" />
        </AdaptationSet>

        <!-- Audio -->
        <AdaptationSet
                mimeType="audio/mp4"
                codecs="dtsh"
                lang="en"
                segmentAlignment="true"
                startWithSAP="1"
                audioSamplingRate="48000">
            <AudioChannelConfiguration
                    schemeIdUri="urn:dts:dash:audio_channel_configuration:2012"
                    value="6"/>
            <SegmentTemplate
                    timescale="48000"
                    media="$RepresentationID$.$Number%03d$"
                    initialization="$RepresentationID$.000" >
                <SegmentTimeline>
                    <S t="0" d="144000" r="26"/>
                </SegmentTimeline>
            </SegmentTemplate>
            <Representation id="Paint_t11_A_5-1ch_HR_2000Kbps.mp4" bandwidth="2000000"/>
            <Representation id="Paint_t12_A_5-1ch_HR_3000Kbps.mp4" bandwidth="3000000"/>
        </AdaptationSet>
    </Period>
</MPD>
